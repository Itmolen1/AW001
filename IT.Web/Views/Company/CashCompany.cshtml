@model IT.Core.ViewModels.CompnayModel
@{
    ViewBag.Title = "AW Fuel - Cash Company";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";

    List<IT.Core.ViewModels.CountryViewModel> countryViewModels = new List<IT.Core.ViewModels.CountryViewModel>();
    countryViewModels = ViewBag.Countries as List<IT.Core.ViewModels.CountryViewModel>;

}
<main id="js-page-content" role="main" class="page-content">
    <div class="row">
        <div class="col-xl-12">
            <div id="panel-1" class="panel">
                <div class="panel-hdr">
                    <h2>
                        Company <span class="fw-300"><i>Registration</i></span>
                    </h2>
                </div>
                <div class="panel-container show">
                    <div class="panel-content">
                        <form action="/Company/CashCompanyCreate" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-2 col-xl-2 p-2">
                                    <label class="newbtn">
                                        <img id="logoPreview" class="blah_cashCompany" src="/assets/staticImages/icon1.png" style="width:140px;">
                                        <input id="LogoUrl" name="LogoUrl" class='pic' onchange="readURL(this);" type="file" required>
                                    </label>
                                </div>
                                <div class="col-md-5 col-xl-5 p-2">
                                    <div class="input-group flex-nowrap">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fal fa-industry fs-xl"></i></span>
                                        </div>
                                        <input id="Name" name="Name" type="text" required autocomplete="off" class="form-control" placeholder="Compnay Name" value="@Model.Name" aria-label="CompanyName" aria-describedby="addon-wrapping-left">
                                    </div>
                                    <div class="input-group flex-nowrap mt-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fal fa-envelope fs-xl"></i></span>
                                        </div>
                                        <input id="Email" name="Email" type="email" value="@Model.Email" autocomplete="off" required class="form-control" placeholder="Email Address" aria-label="Email" aria-describedby="addon-wrapping-left">
                                    </div>
                                    <div class="input-group flex-nowrap mt-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fal fa-mobile fs-xl"></i></span>
                                        </div>
                                        <input id="Cell" name="Cell" type="text" class="form-control" value="@Model.Cell" autocomplete="off" placeholder="Mobile Number" aria-label="Mobile" aria-describedby="addon-wrapping-left">
                                    </div>
                                </div>
                                <div class="col-md-5 col-xl-5 p-2">

                                    <div class="input-group " form-group flex-nowrap">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fal fa-user fs-xl"></i></span>
                                        </div>
                                        <select id="OwnerRepresentaive" name="OwnerRepresentaive" class="form-control">
                                            @if (Model.OwnerRepresentaive == "Owner")
                                            {
                                                <option value="Owner" selected="selected">Owner</option>
                                                <option value="Representative">Representative</option>
                                            }
                                            else
                                            {
                                                <option value="Owner">Owner</option>
                                                <option value="Representative" selected="selected">Representative</option>
                                            }
                                        </select>
                                    </div>

                                    <div class="input-group flex-nowrap mt-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fal fa-phone fs-xl"></i></span>
                                        </div>
                                        <input id="Phone" name="Phone" type="text" class="form-control" value="@Model.Phone" autocomplete="off" placeholder="Phone Number" aria-label="Phone" aria-describedby="addon-wrapping-left">
                                    </div>
                                    <div class="input-group flex-nowrap mt-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fal fa-credit-card fs-xl"></i></span>
                                        </div>
                                        <input id="TRN" name="TRN" type="text" class="form-control" value="@Model.TRN" autocomplete="off" placeholder="Trn Number" aria-label="TrnNumber" aria-describedby="addon-wrapping-left">
                                        <input type="hidden" id="LogoUrl" />
                                    </div>
                                </div>
                            </div>
                            <div class="row ">
                                <div class="col-md-6 col-xl-6 p-2">

                                    <div class="input-group " form-group flex-nowrap">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fal fa-building fs-xl"></i></span>
                                        </div>
                                        <select class=" form-control" name="City" id="City" required>
                                            <option value="" disabled selected hidden>City</option>
                                            @foreach (var item in countryViewModels)
                                            {
                                                foreach (var item1 in item.stateViewModels)
                                                {
                                                    if (item1.cityViewModels != null)
                                                    {
                                                        foreach (var item3 in item1.cityViewModels)
                                                        {
                                                            <option value="@item3.CityName" @(item3.CityName == Model.City ? "selected" : "")>@item3.CityName</option>
                                                        }
                                                    }
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6 col-xl-6 p-2">
                                    <div class="input-group flex-nowrap">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fal fa-address-card fs-xl"></i></span>
                                        </div>
                                        <input id="Address" name="Address" type="text" class="form-control" value="@Model.Address" autocomplete="off" placeholder="Address" aria-label="Your Address" aria-describedby="addon-wrapping-left">
                                    </div>
                                </div>
                            </div>
                            <div class="row ">
                                <div class="col-md-6 col-xl-6 p-2">
                                    <div class="input-group flex-nowrap">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fal fa-globe fs-xl"></i></span>
                                        </div>
                                        <input id="Web" name="Web" type="text" class="form-control" value="@Model.Web" autocomplete="off" placeholder="Enter Website URL" aria-label="Web" aria-describedby="addon-wrapping-left">
                                    </div>
                                </div>
                                <div class="col-md-6 col-xl-6 p-2">
                                    <div class="input-group flex-nowrap">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fal fa-comment fs-xl"></i></span>
                                        </div>
                                        <input id="Remarks" name="Remarks" type="text" class="form-control" value="@Model.Remarks" autocomplete="off" placeholder="Remarks" aria-label="Your Address" aria-describedby="addon-wrapping-left">
                                    </div>
                                </div>
                            </div>
                            <div class="row ">
                                <div class="col-md-12 col-xl-12 p-2">
                                    <button type="submit" class="btn btn-primary btn-sm waves-effect waves-themed float-right">
                                        Company
                                        <span>Submit</span>
                                    </button>
                                </div>
                            </div>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


@section Scripts{
    <script src="~/Scripts/CustomScript/FileUploadPreview.js"></script>
    <script>

        $("#LogoUrl").change(function () {
            readURL(this, "logoPreview");
            $('#LogoUrl').val('logo uploaded');
        });

    </script>

        <script>
            $(document).ready(function () {
                //alert();
                $("#CompanyMenu").attr("aria-expanded", "true");
                $('#CompanyUl').css('display', 'block');
                $('#CompanyLi').addClass('active');
            });

        </script>


}

<style>


    .pic {
        display: none;
    }

    .newbtn {
        cursor: pointer;
    }

    .blah {
        max-width: 100%;
        width: 200px;
        height: auto;
        margin-top: 20px;
    }
</style>
