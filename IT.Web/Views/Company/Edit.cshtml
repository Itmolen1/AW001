@model IT.Core.ViewModels.CompnayModel
@{
    /**/

    ViewBag.Title = "Edit";
  
    List<IT.Core.ViewModels.CountryViewModel> countryViewModels = new List<IT.Core.ViewModels.CountryViewModel>();
    countryViewModels = ViewBag.Countries as List<IT.Core.ViewModels.CountryViewModel>;
}


<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">

            <div class="panel-container show">
                <div class="panel-content">
                    <form action="/Company/Update" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-2 col-xl-2 p-2">
                                <label class="newbtn">
                                    <img id="logoPreview" class="blah_cashCompany" src="https://awservices.somee.com/ClientDocument/@Model.LogoUrl" onerror="this.src='/assets/staticImages/icon1.png';" alt="Missing Image" style="width:140px;">
                                    <input id="LogoUrl" name="LogoUrl" class='pic' value="@Model.LogoUrl" onchange="readURL(this);" type="file">
                                </label>
                            </div>
                            <div class="col-md-5 col-xl-5 p-2">
                                <div class="input-group flex-nowrap">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fal fa-industry fs-xl"></i></span>
                                    </div>
                                    <input type="hidden" name="Id" value="@Model.Id" />
                                    <input id="Name" name="Name" type="text" class="form-control" value="@Model.Name" aria-label="CompanyName" aria-describedby="addon-wrapping-left">
                                </div>
                                <div class="input-group flex-nowrap mt-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fal fa-envelope fs-xl"></i></span>
                                    </div>
                                    <input id="Email" name="Email" type="email" class="form-control" value="@Model.Email" aria-label="Email" aria-describedby="addon-wrapping-left">
                                </div>
                                <div class="input-group flex-nowrap mt-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fal fa-mobile fs-xl"></i></span>
                                    </div>
                                    <input id="Cell" name="Cell" type="text" class="form-control" value="@Model.Cell" aria-label="Mobile" aria-describedby="addon-wrapping-left">
                                </div>
                            </div>
                            <div class="col-md-5 col-xl-5 p-2">
                                <div class="input-group " form-group flex-nowrap">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fal fa-user fs-xl"></i></span>
                                    </div>
                                    <select id="OwnerRepresentaive" name="OwnerRepresentaive" class="form-control">
                                        @if (Model.OwnerRepresentaive == "Owner")
                                        {
                                            <option value="Owner" selected="selected">Owner</option>
                                            <option value="Representative">Representative</option>
                                        }
                                        else
                                        {
                                            <option value="Owner">Owner</option>
                                            <option value="Representative" selected="selected">Representative</option>
                                        }
                                    </select>
                                </div>
                                <div class="input-group flex-nowrap mt-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fal fa-phone fs-xl"></i></span>
                                    </div>
                                    <input id="Phone" name="Phone" type="text" class="form-control" value="@Model.Phone" aria-label="Phone" aria-describedby="addon-wrapping-left">
                                </div>
                                <div class="input-group flex-nowrap mt-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fal fa-credit-card fs-xl"></i></span>
                                    </div>
                                    <input id="TRN" name="TRN" type="text" class="form-control" value="@Model.TRN" aria-label="TrnNumber" aria-describedby="addon-wrapping-left" placeholder="TRN">
                                </div>
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-md-6 col-xl-6 p-2">
                                <div class="input-group " form-group flex-nowrap">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fal fa-building fs-xl"></i></span>
                                    </div>
                                    <select class=" form-control" name="City" id="City">
                                        <option value="" disabled selected hidden>City</option>
                                        @foreach (var item in countryViewModels)
                                        {
                                            foreach (var item1 in item.stateViewModels)
                                            {
                                                if (item1.cityViewModels != null)
                                                {
                                                    foreach (var item3 in item1.cityViewModels)
                                                    {
                                                        <option value="@item3.CityName" @(item3.CityName == Model.City ? "selected" : "")>@item3.CityName</option>
                                                    }
                                                }
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6 col-xl-6 p-2">
                                <div class="input-group flex-nowrap">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fal fa-address-card fs-xl"></i></span>
                                    </div>
                                    <input id="Address" name="Address" type="text" class="form-control" value="@Model.Address" aria-label="Your Address" aria-describedby="addon-wrapping-left">
                                </div>
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-md-6 col-xl-6 p-2">
                                <div class="input-group flex-nowrap">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fal fa-globe fs-xl"></i></span>
                                    </div>
                                    <input id="Web" name="Web" type="text" class="form-control" value="@Model.Web" aria-label="Web" aria-describedby="addon-wrapping-left">
                                    <input type="hidden" name="LogoUrl" id="LogoUrl" value="@Model.LogoUrl" />
                                </div>
                            </div>
                            <div class="col-md-6 col-xl-6 p-2">
                                <div class="input-group flex-nowrap">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fal fa-comment fs-xl"></i></span>
                                    </div>
                                    <input id="Remarks" name="Remarks" type="text" class="form-control" value="@Model.Remarks" aria-label="Your Address" aria-describedby="addon-wrapping-left">
                                </div>
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-md-12 col-xl-12 p-2">
                                <button type="submit" class="btn btn-primary btn-sm waves-effect waves-themed float-right">
                                    Company
                                    <span>Update</span>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/CustomScript/FileUploadPreview.js"></script>
    <script>

        $("#LogoUrl").change(function () {
            readURL(this, "logoPreview");
            $('#LogoUrl').val('LogoUrl');
        });

    </script>

        <script>
            $(document).ready(function () {
                //alert();
                $("#CompanyMenu").attr("aria-expanded", "true");
                $('#CompanyUl').css('display', 'block');
                $('#CompanyLi').addClass('active');
            });

        </script>

}

<style>


    .pic {
        display: none;
    }

    .newbtn {
        cursor: pointer;
    }

    .blah {
        max-width: 100%;
        width: 300px;
        height: auto;
        margin-top: 20px;
    }
</style>


