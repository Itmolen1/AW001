@model List<IT.Core.ViewModels.FuelTransferViewModel>
@{
    ViewBag.Title = "AW Fuel - Fuel Transfer";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";

    List<IT.Core.ViewModels.FuelTransferViewModel> fuelTransferViewModels = new List<IT.Core.ViewModels.FuelTransferViewModel>();
    fuelTransferViewModels = Model as List<IT.Core.ViewModels.FuelTransferViewModel>;
}

<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    <a style="cursor:pointer" class="text-primary">
                        Fuel <span class="fw-300"><i>Fuel Transfer</i></span>
                    </a>
                </h2>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <!--      <div class="panel-tag">
                                <p>Drivers Base Information</p>
                            </div>-->
                    <!-- datatable start -->
                    <table id="dt-basic-example" class="table table-bordered table-hover table-striped w-100">
                        <thead class="bg-primary-600">
                            <tr>
                                <th>Transfer Date</th>
                                <th>Site Name</th>
                                <th>Quantity</th>
                                <th>Plate Number</th>
                                <th>User Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in fuelTransferViewModels)
                            {
                                <tr>
                                    <td>@item.FuelTransferDate</td>
                                    <td>@item.SiteName</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.TraficPlateNumber</td>
                                    <td>@item.UserName</td>
                                    <td>
                                        <a href="/AwfDriver/Details/@item.Id"><i class="fal fa-eye"></i> </a> &nbsp; &nbsp;
                                        <a href="/AwfDriver/Edit/@item.Id"><i class="fal fa-edit"></i></a>&nbsp; &nbsp;
                                       
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- datatable end -->
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{

    <script>
        $(document).ready(function () {
            $("#MasterMenu").attr("aria-expanded", "true");
            $('#MasterUl').css('display', 'block');
            $('#FuelTransferLi').addClass('active');
        });

    </script>

}