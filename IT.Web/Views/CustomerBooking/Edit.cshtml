@model IT.Core.ViewModels.CustomerBookingViewModel
@{
                /**/

                ViewBag.Title = "Edit";
                Layout = "~/Views/Shared/_Layout.cshtml";


                List<IT.Core.ViewModels.ProductViewModel> productViewModels = new List<IT.Core.ViewModels.ProductViewModel>();
                List<IT.Core.ViewModels.ProductUnitViewModel> productUnitViewModels = new List<IT.Core.ViewModels.ProductUnitViewModel>();

                productViewModels = ViewBag.Products as List<IT.Core.ViewModels.ProductViewModel>;
                productUnitViewModels = ViewBag.ProductUnits as List<IT.Core.ViewModels.ProductUnitViewModel>;
}

<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item"><a href="javascript:void(0);"> Booking</a></li>
    <li class="breadcrumb-item active">Create</li>
    <li class="position-absolute pos-top pos-right d-none d-sm-block"><span class="js-get-date"></span></li>
</ol>

<div class="subheader">
    <h1 class="subheader-title">
        <i class='subheader-icon fal fa-edit'></i> Create Booking
    </h1>
</div>
<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    <span class="fw-300"></span>
                </h2>
            </div>
            <form action="/CustomerBooking/Update" method="post" enctype="application/x-www-form-urlencoded">
                <div class="panel-container show">
                    <div class="panel-content">
                        <div class="panel-tag">
                            Please Add Booking...
                        </div>
                        <input type="hidden" name="Id" value="@Model.Id" />

                        <div class="row">

                            <div class="col-md-6                                    ">

                                <div class="form-group mb-2">
                                    <label>Product Name</label>
                                    <select id="ProductId" name="ProductId" class="select2 ProductId" required>
                                        @foreach (var item in productViewModels)
                                        {
                                            <option value="@item.Id" @(item.Id == Model.ProductId ? "selected='selected'" : "")>@item.Name</option>

                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="table-responsive-lg">
                    <table class="table m-0 data-table" id="SiteTarget">
                        <thead>
                            <tr>
                                <th>Quantity</th>
                                <th width="200px"> Product Unit </th>
                                <th>Unit Price</th>
                                <th>VAT %</th>
                                <th style="width:90px">Total Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td style="width:200px">
                                    <input type="text" class="form-control Quantity" value="@Model.BookQuantity" name="BookQuantity" id="Quantity" placeholder="QTY" />
                                </td>
                                <td style="width:250px !important">
                                    <div class="form-group mb-2">

                                        <select id="UnitId" name="UnitId" class="form-control UnitId" required>
                                            <option>Product Unit</option>
                                            @foreach (var item in productUnitViewModels)
                                            {

                                                <option value="@item.Id" @(item.Id == Model.UnitId ? "selected='selected'" : "")>@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                </td>

                                <td>
                                    <input type="text" name="UnitPrice" class="form-control UnitPrice" value="@Math.Round(Model.UnitPrice)" id="UnitPrice" placeholder="Unit Price" />
                                </td>

                                <td>
                                    <div class="form-group mb-2">
                                        <select id="VAT1" name="VAT1" class="form-control VAT1" required>
                                            @if (Model.VAT > 0)
                                            {
                                                <option value="0">0</option>
                                                <option value="5" selected="selected">5</option>
                                            }
                                            else
                                            {
                                                <option value="0" selected="selected">0</option>
                                                <option value="5">5</option>
                                            }

                                        </select>
                                    </div>
                                </td>

                                <td style="width:250px">
                                    <input type="text" class="form-control TotalAmount" name="TotalAmount" value="@Math.Round(Model.TotalAmount,2)" id="TotalAmount" placeholder="Total Amount" />

                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>

                <div class="panel-container">
                    <div class="panel-content">
                        <div class="row">
                            <div class="col-md-10">
                            </div>
                            <div class="col-md-2">
                                <table>
                                    <thead>
                                        <tr>
                                            <th style="width:100px"><b>VAT 5% </b></th>
                                            <td><input class="form-control" type="text" id="VAT" name="VAT" value="@Model.VAT" /></td>
                                        </tr>

                                        <tr>
                                            <th style="width:100px"><b>Gand Total</b> </th>
                                            <td><input class="form-control" type="text" id="gtotal" name="name" value="343" /></td>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="panel-container">
                    <div class="panel-content">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-2">
                                    <textarea class="form-control Description" name="Description" id="Description" placeholder="Description">@Model.Description</textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-12">
                        <button type="submit" id="SaveRecord" class="btn btn-primary btn-sm btn-block waves-effect waves-themed">
                            Booking
                            <span>Submit</span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
        @Html.ValidationSummary(false,"",new {@class = "text-danger" })
    </div>
</div>

@section scripts{
    
    <script>
        
        $(document).ready(function () {

            $('input[name=\'BookQuantity\']').on('change keyup click', function () {
                booking();
            });

            $('#UnitPrice').on('change keyup click', function () {
                booking();
            });

        });

        function booking() {

           // $('#VAT1').empty();

            var price = $('#UnitPrice').val();

            var quantity = $('.Quantity').val();

            var total = $('#TotalAmount').val(price * quantity);



            @*$('#VAT1').append('<option>gtgtgtgt</option>');*@


            var tt = $('#TotalAmount').val()


            @*$('#VAT').val(parseFloat(vat_value) + parseFloat(tt));*@

            $('#VAT').val();
            $('#VAT1').change(function () {
                var vt = $('#VAT1').val();
                if (vt != 0) {
                    var vat_value = ((5 * tt) / 100);
                    $('#VAT').val(vat_value);
                    $('#gtotal').val(parseFloat(vat_value) + parseFloat(tt));
                }
                else {
                    $('#TotalAmount').val(tt);
                }


            });

        }


    </script>


}


