@model IEnumerable<IT.Core.ViewModels.LPOInvoiceViewModel>

@{
    ViewBag.Title = "AW Fuel - Custmer List";
}

<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h4>My Estimates List</h4>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <div class="table-responsive">
                        <table class="QuotationListTable table table-bordered table-hover table-striped w-100">
                            <thead class="bg-primary-600">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Product)
                                    </th>
                                    <th>
                                        Quantity
                                    </th>
                                    <th>
                                        Unit
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FromDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DueDate)
                                    </th>
                                    <th>
                                        Amount
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.VAT)
                                    </th>
                                    <th>
                                        Grand Total
                                    </th>
                                    <th>
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Product)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TotalQuantity)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UnitName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FromDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DueDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Total)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.VAT)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Balance)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Details", "Details", new { id = item.Id })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- datatable end -->
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script>
        $(document).ready(function () {
            $("#InvoiceMenu").attr("aria-expanded", "true");
            $('#InvoiceUl').css('display', 'block');
            $('#EstimatesLi').addClass('active');
        });
    </script>
}

