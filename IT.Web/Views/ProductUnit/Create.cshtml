@model IT.Core.ViewModels.ProductUnitViewModel

@{

    if (Model.Id > 0)
    {
        ViewBag.Title = "AW Fuel - Edit Product Unit";
    }
    else
    {
        ViewBag.Title = "AW Fuel - Create Product Unit";
    }
}
@*<label></label>*@
<main id="js-page-content" role="main" class="page-content">


    <div class="row">
        <div class="col-xl-12">
            <div id="panel-1" class="panel">
                <div class="panel-hdr">
                    @if (Model.Id > 0)
                    {
                        <h2>
                            Product Unit <span class="fw-300">Edit</span>
                        </h2>
                    }
                    else
                    {
                        <h2>
                            Product Unit<span class="fw-300">Create</span>
                        </h2>

                    }

                </div>
                <div class="panel-container show">
                    <div class="panel-content">

                        <form action="/ProductUnit/Create" method="post">
                            <input type="hidden" value="@Model.Id" name="Id" id="Id" />
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-label" for="simpleinput">Unit Name</label>
                                        <input type="text" id="Name" name="Name" value="@Model.Name" class="form-control" placeholder="Product Unit Name">
                                    </div>
                                </div>
                            </div>
                            <div class="row py-5">
                                <div class="col-md-12">
                                    @if (Model.Id > 0)
                                    {
                                        <button type="submit" class="btn btn-primary btn-sm btn-block waves-effect waves-themed">
                                            Update
                                            <span>Product Unit</span>
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" id="SaveRecord" class="btn btn-primary btn-sm btn-block waves-effect waves-themed">
                                            Submit
                                            <span>Product Unit</span>
                                        </button>
                                    }
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section scripts{
    <script>
        $(document).ready(function () {
            //alert();
            $("#ProductMenu").attr("aria-expanded", "true");
            $('#ProductUl').css('display', 'block');
            $('#ProductUnitLi').addClass('active');

            $("form").submit(function (event) {

                $("#SaveRecord").text('please wait...');
                $("#SaveRecord").attr("disabled", true);

            });
        });



    </script>

}