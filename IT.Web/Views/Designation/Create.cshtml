@model IT.Core.ViewModels.DesignationViewModel

@{
    ViewBag.Title = "Aw Fuel - Designation Create";
}

<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    Designation <span class="fw-300">Create</span>
                </h2>
            </div>
            <div class="panel-container show">
                <div class="panel-content">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-12 p-2">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Designation, htmlAttributes: new { @class = "control-label col-md-2" })
                                            @Html.EditorFor(model => model.Designation, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Designation, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 p-2">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label" })

                                            <div class="checkbox">
                                                @Html.EditorFor(model => model.IsActive)
                                                @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 mt-5">
                                <button type="submit" id="Save" class="btn btn-primary btn-sm btn-block waves-effect waves-themed">
                                    Designation
                                    <span>submit</span>
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#EmployeeMenu").attr("aria-expanded", "true");
            $('#EmployeeUl').css('display', 'block');
            $('#EmployeeDesignationLi').addClass('active');
        });
    </script>
}