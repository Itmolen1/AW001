
@using System.Web.Mvc.Html
@model List<IT.Core.ViewModels.VehicleViewModel>
@{
    ViewBag.Title = "AW Fuel - Vehicles List";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";

    List<IT.Core.ViewModels.VehicleViewModel> VehicleViewModels = new List<IT.Core.ViewModels.VehicleViewModel>();
    VehicleViewModels = Model as List<IT.Core.ViewModels.VehicleViewModel>;
}

<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    <a class="btn btn-md btn-primary" href="/AwfVehicle/Create">
                        <i class="fal fa-plus-circle"></i>  Add New <span class="fw-300"><i>Vehicle</i></span>
                    </a>
                </h2>

            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <!--      <div class="panel-tag">
                                <p>Drivers Base Information</p>
                            </div>-->
                    <!-- datatable start -->
                    <table id="dt-basic-example" class="table table-bordered table-hover table-striped w-100">
                        <thead class="bg-primary-600">
                            <tr>
                                <th>Name</th>
                                <th>TraficPlateNumber</th>
                                <th>Place of Issue</th>
                                <th>TC Number</th>
                                <th>Model</th>
                                <th>Mulkia Expiry</th>
                                <th>Insurance Expiry</th>
                                <th>IsActive</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in VehicleViewModels)
                            {
                                <tr>
                                    <td>@item.VehicleTypeName</td>
                                    <td>@item.TraficPlateNumber</td>
                                    <td>@item.PlaceofIssue</td>
                                    <td>@item.TCNumber</td>
                                    <td>@item.Model</td>
                                    <td>@Convert.ToDateTime(item.MulkiaExpiry ?? System.DateTime.Now.ToString()).ToString("dd-MMM-yyyy")</td>
                                    <td>@Convert.ToDateTime(item.InsuranceExpiry ?? System.DateTime.Now.ToString()).ToString("dd-MMM-yyyy") </td>
                                    <td>
                                        @if (@item.IsActive == true)
                                        {
                                            <div class="switchToggle">
                                                <input type="checkbox" class="IsActive" data-value="@item.Id" id="@item.Id" checked>
                                                <label for="@item.Id">Toggle</label>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="switchToggle">
                                                <input type="checkbox" class="IsActive" data-value="@item.Id" id="@item.Id">
                                                <label for="@item.Id">Toggle</label>
                                            </div>

                                        }
                                        <input type="hidden" value="@item.Id" class="Id" id="DriverId" />
                                    </td>
                                    <td>
                                        <a href="/AwfVehicle/Details/@item.Id"><i class="fal fa-eye"></i></a> &nbsp; &nbsp;
                                        <a href="/AwfVehicle/Edit/@item.Id"><i class="fal fa-edit"></i></a>&nbsp; &nbsp;
                                       
                                    </td>
                                </tr>
                            }

                        </tbody>

                    </table>
                    <!-- datatable end -->
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{

    <script src="~/Scripts/CustomScript/FileUploadPreview.js"></script>
    <script>

        $(document).ready(function () {

            $(".IsActive").click(function () {
                if (confirm("Are you sure")) {

                    var act = false;
                    if (this.checked) {
                        act = true;
                    }

                    var Data = JSON.stringify(
                        {
                            IsActive: act,
                            Id: $(this).data("value"),
                        })
                    // alert(Data);
                    ajaxRequest("POST", "/AWFVehicle/ChangeStatus", Data, "json").then(function (result) {
                        if (result != "failed") {
                            //console.log(result);
                            window.location.reload();
                        }
                        else {
                            alert('there is some problem');
                        }
                    })
                }
                else {
                    return false;
                }
            });
        });

    </script>

    <script>
        $(document).ready(function () {
            //alert();
            $("#VehicleMenu").attr("aria-expanded", "true");
            $('#VehicleUl').css('display', 'block');
            $('#VehicleLi').addClass('active');
        });

    </script>


}
