@model IT.Core.ViewModels.CustomerNotificationViewModel
@{
    ViewBag.Title = "Advertisement Details";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    <a href="/CustomerNotification/Edit/@Model.Id"><i class="fal fa-edit"></i> Edit <span class="fw-300"> Advertisement</span></a>
                </h2>

            </div>
            <div class="panel-container show">
                <div class="panel-content">

                    <form>
                        <input type="hidden" value="@Model.Id" name="Id" id="Id" />
                        <div class="row">
                            <div class="col-md-6">
                                <label class=newbtn>

                                    <img id="AddPreview" class="blah" src="http://itmolen-001-site8.htempurl.com/ClientDocument/@Model.ImageUrl" onerror="this.src='/assets/staticImages/icon1.png';" alt=" Image">
                                </label>
                            </div>
                            <div class="col-md-6">

                                <div class="row">
                                    <div class="col-md-12 mt-3">
                                        <div class="form-group">
                                            <label class="form-label" for="simpleinput">Message Title</label>
                                            <input type="text" value="@Model.MessageTitle" class="form-control" disabled>
                                        </div>
                                    </div>

                                    <div class="col-md-12 mt-3">
                                        <div class="form-group">
                                            <label class="form-label" for="simpleinput">Description</label>
                                            <textarea rows="15" class="form-control" disabled>@Model.MessageDescription</textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



<style>


    .pic {
        display: none;
    }

    .newbtn {
        cursor: pointer;
    }

    .blah {
        max-width: 100%;
        width: 600px;
        height: auto;
        margin-top: 20px;
    }
</style>

@section scripts{

    <script>
        $(document).ready(function () {
            $("#MasterMenu").attr("aria-expanded", "true");
            $('#MasterUl').css('display', 'block');
            $('#AdvertisementLi').addClass('active');
        });

    </script>


}