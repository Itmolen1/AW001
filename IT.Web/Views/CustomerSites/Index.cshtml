@model List<IT.Core.ViewModels.SiteViewModel>
@{
    ViewBag.Title = "Custromer site List";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<IT.Core.ViewModels.SiteViewModel> siteViewModels = new List<IT.Core.ViewModels.SiteViewModel>();
    siteViewModels = Model as List<IT.Core.ViewModels.SiteViewModel>;
}

<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    <a class="btn btn-md btn-primary" href="/CustomerSites/Create">
                        <i class="fal fa-plus-circle"></i>  Create New <span class="fw-300"><i>Site</i></span>
                    </a>
                </h2>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <!--      <div class="panel-tag">
                                <p>Drivers Base Information</p>
                            </div>-->
                    <!-- datatable start -->
                    <table id="dt-basic-example" class="table table-bordered table-hover table-striped w-100">
                        <thead class="bg-primary-600">
                            <tr>
                                <th>Site Name</th>
                                <th>Contact person</th>
                                <th>Contact person Mobile</th>
                                <th>Address</th>
                                <th>Created date</th>
                                <th>Created by</th>
                                @*<th>IsActive</th>*@
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in siteViewModels)
                            {
                                <tr>
                                    <td>@item.SiteName</td>
                                    <td>@item.ContactPersonName</td>
                                    <td>@item.ContactPhone</td>
                                    <td>@item.Address</td>
                                    <td>@item.CreatedDates</td>
                                    <td>@item.UserName</td>
                                    @*<td>@item.IsActive</td>*@

                                    <td>
                                        <a href="/CustomerSites/Details/@item.Id"><i class="fal fa-eye"></i> </a> &nbsp; &nbsp;
                                        <a href="/CustomerSites/Edit/@item.Id"><i class="fal fa-edit"></i></a>&nbsp; &nbsp;
                                       
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- datatable end -->
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{


    <script>
        $(document).ready(function () {
            $("#RegisteredMenu").attr("aria-expanded", "true");
            $('#RegisteredUl').css('display', 'block');
            $('#RegisteredLi').addClass('active');
        });

    </script>

}