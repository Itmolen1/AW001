@using System.Web.Mvc.Html

@model List<IT.Core.ViewModels.VehicleViewModel>
@{
    ViewBag.Title = "Vehicles List";
    Layout = ViewBag.LayoutName;

    List<IT.Core.ViewModels.VehicleViewModel> VehicleViewModels = new List<IT.Core.ViewModels.VehicleViewModel>();
    VehicleViewModels = Model as List<IT.Core.ViewModels.VehicleViewModel>;
}

<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    <a class="btn btn-md btn-primary" href="/Vehicle/Create">
                        <i class="fal fa-plus-circle"></i>  Add New <span class="fw-300"><i>Vehicle</i></span>
                    </a>
                </h2>

            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <!--      <div class="panel-tag">
                                <p>Drivers Base Information</p>


                            </div>-->
                    <!-- datatable start -->
                    <table id="dt-basic-example" class="table table-bordered table-hover table-striped w-100">
                        <thead class="bg-primary-600">
                            <tr>
                                <th>Name</th>
                                <th>TraficPlateNumber</th>
                                <th>Place of Issue</th>
                                <th>TC Number</th>
                                <th>Model</th>
                                <th>Mulkia Expiry</th>
                                <th>Insurance Expiry</th>
                                <th>IsActive</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (VehicleViewModels != null && VehicleViewModels.Count > 0)
                            {
                                foreach (var item in VehicleViewModels)
                                {
                                    <tr>
                                        <td>@item.VehicleTypeName</td>
                                        <td>@item.TraficPlateNumber</td>
                                        <td>@item.PlaceofIssue</td>
                                        <td>@item.TCNumber</td>
                                        <td>@item.Model</td>
                                        <td>@item.MulkiaExpiry</td>
                                        <td>@item.InsuranceExpiry</td>
                                        <td>
                                            @if (@item.IsActive == true)
                                            {
                                                <div class="switchToggle">
                                                    <input type="checkbox" id="@item.Id" checked>
                                                    <label for="@item.Id">Toggle</label>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="switchToggle">
                                                    <input type="checkbox" id="@item.Id">
                                                    <label for="@item.Id">Toggle</label>
                                                </div>

                                            }
                                        </td>

                                        <td>
                                            <div class="row">
                                                <div class="col-6">
                                                    <form action="/Vehicle/Details" method="post">
                                                        <input type="hidden" name="Id" value="@item.Id" />
                                                        <input type="hidden" name="CompId" value="@item.CompanyId" />

                                                        <button type="submit" class="btn btn-sm"><i class="fal fa-eye"></i></button>
                                                    </form>
                                                </div>
                                                <div class="col-6">
                                                    <form action="/Vehicle/Edit" method="post">
                                                        <input type="hidden" name="Id" value="@item.Id" />
                                                        <input type="hidden" name="CompId" value="@item.CompanyId" />

                                                        <button type="submit" class="btn btn-sm"><i class="fal fa-edit"></i></button>
                                                    </form>
                                                </div>

                                              

                                            </div>


                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    <!-- datatable end -->
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script>
        $(document).ready(function () {
            $("#VehicleMenu").attr("aria-expanded", "true");
            $('#VehicleUl').css('display', 'block');
            $('#VehicleLi').addClass('active');
        });

    </script>

}