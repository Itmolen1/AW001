@model  List<IT.Core.ViewModels.CityViewModel>
@{
    ViewBag.Title = "AWFuel - All Cities";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";

    List<IT.Core.ViewModels.CityViewModel> cityViewModels = new List<IT.Core.ViewModels.CityViewModel>();
    cityViewModels = Model as List<IT.Core.ViewModels.CityViewModel>;
}

<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    <a class="btn btn-md btn-primary" href="/Country/AddUpdateCity">
                        <i class="fal fa-plus-circle"></i>  Create New <span class="fw-300"><i>City</i></span>
                    </a>
                </h2>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <!--      <div class="panel-tag">
                                <p>Drivers Base Information</p>
                            </div>-->
                    <!-- datatable start -->
                    <table id="dt-basic-example" class="table table-bordered table-hover table-striped w-100">
                        <thead class="bg-primary-600">
                            <tr>

                                <th>City Name </th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in cityViewModels)
                            {
                                <tr>

                                    <td>@item.CityName</td>

                                    <td>
                                        <form action="/Country/EditCity" method="post">
                                            <input type="hidden" name="Id" value="@item.Id" />
                                            <input type="hidden" name="Name" value="@item.CityName" />
                                            <input type="hidden" name="StateId" value="@item.StateId" />

                                            <button type="submit" class="btn btn-sm"><i class="fal fa-edit"></i></button>
                                        </form>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- datatable end -->
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{

    <script>
        $(document).ready(function () {
            $("#MasterMenu").attr("aria-expanded", "true");
            $('#MasterUl').css('display', 'block');
            $('#CityLi').addClass('active');
        });

    </script>

}

