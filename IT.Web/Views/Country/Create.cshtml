@model IT.Core.ViewModels.CountryViewModel
@{
    if (Model.Id > 0)
    {
        ViewBag.Title = "AW Fuel - Edit Country";
    }
    else
    {
        ViewBag.Title = "AW Fuel - Create Country";
    }
}


<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    Country <span class="fw-300"></span>
                </h2>

            </div>
            <div class="panel-container show">
                <div class="panel-content">


                    <form action="/Country/Create" method="post">
                        <input type="hidden" value="@Model.Id" name="Id" id="Id" />
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-label" for="simpleinput">Name</label>
                                    <input type="text" id="CountryName" name="CountryName" value="@Model.CountryName" class="form-control" placeholder="Country Name">
                                </div>
                            </div>

                        </div>

                        <div class="row py-5">
                            <div class="col-md-12">
                                @if (@Model.Id > 0)
                                {
                                    <button type="submit" class="btn btn-primary btn-sm btn-block waves-effect waves-themed">
                                        Update
                                        <span>Country</span>
                                    </button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary btn-sm btn-block waves-effect waves-themed">
                                        Submit
                                        <span>Country</span>
                                    </button>
                                }

                            </div>
                        </div>


                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{

    <script>
        $(document).ready(function () {
            $("#MasterMenu").attr("aria-expanded", "true");
            $('#MasterUl').css('display', 'block');
            $('#CountryLi').addClass('active');
        });

    </script>


}